    <section class="ftco-section">
    	<div class="container">

            <h1>入札状態 </h1>

            <div class="search_car">
            <form action="searchboxpost" method="post">
            <select name="searchby" >
            <option value="auctionid">オークションID</option>
            <option value="carbrand">メーカー</option>       
            </select>
            <input type="text" name="searchtext" >
            <button>検索</button>
            </form><br>
            </div>

    		<div class="row">
    			<div class="table-wrap">
				<table class="table">
					<thead class="thead-primary">
					<tr>
                        <th>オークションID</th>
						<th>車両ID</th>
						<th>メーカー名</th>
						<th>車種名</th>
						<th>車検</th>
                        <th>Location</th>

                        <th>入札者数</th>
						<th>開始価格</th>
                        <th>終了価格</th>
						<th>入札単位</th>
						<th>車両状態</th>
						<th>開始日付</th>
                        <th>終了日付</th>
                        <th></th>
					</tr>
					</thead>

				    <tbody>
                        <% for(var auction of values) {
     
                            var startingdate = auction.startingtime
                            var finishdate = auction.finishtime
                            %>     
                            <% if(auction.startingprice != null) {    %>

				    <tr class="alert" role="alert">
				        <td><%= auction.auctionid %> </td>
        <td><%= auction.carid %> </td>
        <td><%= auction.carbrand %> </td>
        <td><%= auction.carname %> </td>
        <td>
            <%= auction.shaken %>
        </td>
        <td>
            <%= auction.location %>
        </td>

        <td><%= auction.bidnumber %> </td>
        <td><%= auction.startingprice %> </td>
        <td><%= auction.finishprice %> </td>
        <td><%= auction.bidpervalue %> </td>   
        <td><%= auction.carcondition %> </td>  

        <% if(startingdate != null && finishdate != null) { %> 
        <td><%= startingdate.toLocaleString(); %> </td>
        <td><%= finishdate.toLocaleString(); %> </td>
      
        <% } %>

        <td>
            
            <% if(auction.img.length > 1  ){ %>
            <% const urlSegments = auction.img.split(',')  %>
            <img src="/public/upload/<%= urlSegments[0] %>" alt="" width="100" height="100">
            <% } %>  
        </td>
        <% } %>
                    </tr>
                    <% } %> 
						  
				</tbody>
			</table>
