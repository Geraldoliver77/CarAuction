  <section class="hero-wrap hero-wrap-2" style="background-image: url('../public/upload/images/bg_2.jpg');"
    data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
      <div class="row no-gutters slider-text align-items-end justify-content-center">
        <div class="col-md-9 ftco-animate mb-5 text-center">
          <p class="breadcrumbs mb-0"><span class="mr-2"><a href="index">ホーム <i
                  class="fa fa-chevron-right"></i></a></span> <span>プロダクト <i class="fa fa-chevron-right"></i></span></p>
          <h2 class="mb-0 bread">プロダクト</h2>
        </div>
      </div>
    </div>
  </section>

  <section class="ftco-section">
    <div class="container">
      <div class="row">
        <div class="col-md-9">
          <div class="row mb-4">
            <div class="col-md-12 d-flex justify-content-between align-items-center">

              <h4 class="product-select">車両を選択</h4>
              <form action="product" method="post">
                <select class="selectpicker" name="searchby">
                  <option value="auctionid">オークション ID</option>
                  <option value="carbrand">メーカー</option>
                  <option value="carname">車両名</option>
                </select>
                <input type="text" name="searchtext">
                <button>検索</button>
              </form>
            </div>
          </div>



          <div class="row">
            <% for(var auction of values) { %>
              <div class="col-md-4 d-flex">
                <div class="product ftco-animate">
                  <% if(auction.img.length> 1 ){ %>
                    <% const urlSegments=auction.img.split(',') %>
                      <div class="img d-flex align-items-center justify-content-center"
                        style="background-image:url(public/upload/<%= urlSegments[0] %>);">
                        <% } %>
                          <div class="desc">
                            <p class="meta-prod d-flex">
                              <a href="/product_details?auctionid=<%= auction.auctionid %>&&carid=<%= auction.carid %>"
                                method="POST" class="d-flex align-items-center justify-content-center"><span
                                  class="flaticon-visibility"></span></a>
                            </p>
                          </div>
                      </div>
                      <div class="text text-center">
                        <% if(auction.startingprice !=null) { %>
                          <span class="category">
                            <%= auction.carbrand %>
                          </span>
                          <h2>
                            <%= auction.carname %>
                          </h2>

                          
                          <% for(var idexist of valuesexist) { %>   
                            <% if(idexist.auctionid == auction.auctionid){ %>
                              オークション終了<% break ; %>                                  
                              <% } %>                                  
                          <% } %>
                          <% if(idexist.auctionid != auction.auctionid){ %>
                            <span class="price">￥ <% for(var sum of valuesum) { %>      
                              <% if(sum.auctionid == auction.auctionid){ %>
                                <%= sum.sumvalue %>           
                                 <% } %>   </span>
                              <% } %>                                      
                        <% } %>    
        
        



                                <span class="seller">
                                  <%= auction.carcondition %>
                                </span>
                                <% } %>

                      </div>
                </div>
              </div>
              <% } %>
          </div>
        </div>
      </div>
  </section>


