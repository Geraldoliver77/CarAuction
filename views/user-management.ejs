    			<div class="table-wrap">
						<table class="table">
						  <thead class="thead-primary">
						    <tr>
						    	<th>Id</th>
						        <th>氏名</th>
						        <th>メール</th>
						        <th>ログイン</th>
						        <th>登録日</th>
                    <th></th>
                    <th></th>
						    </tr>
						  </thead>

						  <tbody>
              <% for(var user of values) {  %>  
						    <tr class="alert" role="alert">
						      <td><%= user.id %></td>
						      <td><%= user.name %></td>
						      <td><%= user.email %> </td>
				          <td><%= user.username %></td>
                  <td><%= user.reg_date %> </td>  
						      <td>
                      <form action='/deleteuser?id=<%= user.id %>' method='POST'>
                          <button>強制退会</button>
                      </form>
                                 
                  </td>  
                  <td><button id="btn" onclick="update('<%= user.id %>')">編集</button> </td>
						    </tr>
