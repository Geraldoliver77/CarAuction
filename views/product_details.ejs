				<% var flg=0 ; var total=0; var finishprice=0 ; var finishflag=0; var checkbutton=0; %>

				<% for(var bid of bidvalues) { %>
					<% var flg=1 ; %>
					<% } %>
                    <% for(var sum of sumvalues) { %>
                        <% } %>

					<% for(var auction of values) { 
					  var startingdate=auction.startingtime.toLocaleString();
                      var finishdate=auction.finishtime.toLocaleString(); 
                      var today=new Date(); 
                      var diffMsBefore=(auction.startingtime - today); 
                      var diffDaysBefore=Math.floor(diffMsBefore / 86400000);
                      diffHrsBefore=Math.floor((diffMsBefore % 86400000) / 3600000);  
                      var diffMinsBefore=Math.round(((diffMsBefore % 86400000) % 3600000) / 60000 ); 
                      var diffMsStarted=(auction.finishtime - today); 
                      var diffDaysStarted=Math.floor(diffMsStarted / 86400000); 
                      var diffHrsStarted=Math.floor((diffMsStarted % 86400000) / 3600000);  
                      var diffMinsStarted=Math.round(((diffMsStarted % 86400000) % 3600000) / 60000 );  
							%>
						<% if(auction.startingprice !=null) { %>
    			<div class="col-lg-6 product-details pl-md-5 ftco-animate">
    				<h3><%= auction.carname %></h3>
					
    				<div class="rating d-flex">
							<p class="text-left mr-4">
								<a href="#" class="mr-2" style="color: red;"><%= auction.bidnumber %> <span>Bid</span></a>
							</p>
							<p class="text-left">
								<a href="#" class="mr-2" style="color: #000;">￥<%= auction.startingprice %> <span>～</span></a>
							</p>
						</div>

						<p>
							ブランド：<span><%= auction.carbrand %></span>
						</p><hr>
					
						<p>
							車両ID：<span><%= auction.carid %></span>
						</p><hr>

						<p>
							車検：<span><%= auction.shaken %></span>
						</p><hr>

						<p>
							走行距離：<span><%= auction.mileage %></span>
						</p><hr>

						<p>
							位置：<span><%= auction.location %></span>
						</p><hr>

						<p>
							車両状態：<span><%= auction.carcondition %></span>
						</p><hr>
						    											
						<% if(startingdate !=null && finishdate !=null) { %>
							<p>
								開始日: <span><%= startingdate %></span>
							</p><hr>

							<p>
								終了日: <span><%= finishdate %></span>
							</p><hr>
						<% } %>

						<% if(diffDaysBefore> 0) { %>

							<p>オークション開始まで :</p>
							<p>
								<span style= "color: red;">
									<%= diffDaysBefore %> Days <%= diffHrsBefore %> Hours <%= diffMinsBefore %> Minutes
								</span>
							</p><hr>

						<% } %>

						<% if( auction.finishprice <= sum.sumvalue ){ finishflag=1; checkbutton=1; %>
							<p style="color: red;">オークションが終了しています</p>
                            <p> <%= bid.username %>様　おめでとうございます。 </p>
                            <p> 最終価格 : <%= sum.sumvalue %>円</p><hr>
							
							<form action="/sales-register?auctionid=<%= auction.auctionid %>&&carid=<%= auction.carid %>&&auctionprice=<%= sum.sumvalue %>&&bidusername=<%= bid.username %>" method="POST">
                                <button>戻る</button>
                            </form>
						<% } %>

						
						<% if(finishflag < 1 ){ %>
							<% if(diffMsStarted> 0 && diffMsBefore < 1) { %>
						
								<p>
									オークション終了まで残り : 
									<span style= "color: red;">
										<%= diffDaysStarted %> Days <%= diffHrsStarted %> Hours <%=diffMinsStarted %> Minutes
									</span>
								</p><hr>
							
							<% if(flg> 0) { %>
							<p>
								最終入札者 : <span><%= bid.username %></span>
							</p><hr>
							<% } else { %>
								<p>
									最終入札者 : <span></span>
								</p><hr>
							<% } %>
								<p style= "color: blue;">開始価格 : <span><%= auction.startingprice %> 円</span><hr>
								<p style= "color: red;">最終金額 : <%= auction.finishprice %> 円</p><hr>
								<p style= "color: green;">現在の金額 : <%= sum.sumvalue %> 円</p><hr>

								<div class="row mt-4">
									<div class="input-group col-md-6 d-flex mb-3">
										<form
										action="/addbid?auctionid=<%= auction.auctionid %>&&carid=<%= auction.carid %>"
										method="POST">

										<p>入札金額：</p>
										<select name="bid" id="quantity" class="quantity form-control input-number">
											<option value=<%=auction.bidpervalue * 1 %>><%= auction.bidpervalue
														%>円 || <%=
														auction.bidpervalue * 1 + sum.sumvalue %>円
											</option>
											<option value=<%=auction.bidpervalue * 2 %>><%=
													auction.bidpervalue * 2 %>円 || <%=
													auction.bidpervalue * 2 + sum.sumvalue %>円
											</option>
											<option value=<%=auction.bidpervalue * 3  %>><%=
													auction.bidpervalue * 3 %>円 || <%=
													auction.bidpervalue * 3 + sum.sumvalue %>円
											</option>
											<option value=<%=auction.bidpervalue * 4  %>><%=
													auction.bidpervalue * 4 %>円|| <%=
													auction.bidpervalue * 4 + sum.sumvalue %>円
											</option>
											<option value=<%=auction.bidpervalue * 5 %>><%=
													auction.bidpervalue * 5 %>円 || <%=
													auction.bidpervalue * 5 + sum.sumvalue %>円
											</option>
											<option value=<%= auction.finishprice - sum.sumvalue   %>>最終金額を即決 || <%= auction.finishprice  %>
												円
											</option>
										</select>              

									</div>
									<div class="w-100"></div>
								</div>
								<p>
									<button class="btn btn-primary py-3 px-5 mr-2">入札する</button>

								</p>
								</form>
						  
							<% } %>
						<% } %>
						<% } %>
					<% } %>
				</div>
			</div>

        <div class="row mt-5">
